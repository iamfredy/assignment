<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= render 'shared/error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :consumer_key , "Consumer Key " %>
      <%= f.text_field :consumer_key  %>

      <%= f.label :consumer_secret, "Consumer Secret" %>
      <%= f.text_field :consumer_secret %>

      <%= f.label :access_token, "Access Token" %>
      <%= f.text_field :access_token %>

      <%= f.label :access_token_secret, "Access Token Secret" %>
      <%= f.text_field :access_token_secret %>            

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>